<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/cover_placeholder">

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_find_previous_holo_dark"
            android:id="@+id/upBtt"
            android:scaleType="centerCrop"
            android:background="@null"
            android:layout_row="0"
            android:layout_column="1"/>


        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_action_previous_item"
            android:id="@+id/leftBtt"
            android:scaleType="centerCrop"
            android:background="@null"
            android:layout_row="1"
            android:layout_column="0"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/circle"
            android:id="@+id/enterBtt"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:background="@null"
            android:layout_row="1"
            android:layout_column="1"/>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_action_next_item"
            android:id="@+id/rightBtt"
            android:scaleType="centerCrop"
            android:background="@null"
            android:layout_row="1"
            android:layout_column="2"/>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_find_next_holo_dark"
            android:id="@+id/downBtt"
            android:scaleType="centerCrop"
            android:background="@null"
            android:layout_row="2"
            android:layout_column="1"/>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_menu_revert"
            android:id="@+id/backBtt"
            android:scaleType="centerCrop"
            android:background="@null"
            android:layout_row="3"
            android:layout_column="0"/>
        </GridLayout>
</RelativeLayout>